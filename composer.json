{
  "name": "scriptfusion/retry-exception-handlers",
  "description": "Exception handlers for Retry.",
  "authors": [
    {
      "name": "Bilge",
      "email": "bilge@scriptfusion.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "scriptfusion/retry": "^1|^2|^3|^4"
  },
  "require-dev": {
    "amphp/amp": "^3-beta.9",
    "phpunit/phpunit": "^9.5.23",
    "revolt/event-loop": "^0.2"
  },
  "autoload": {
    "psr-4": {
      "ScriptFUSION\\Retry\\ExceptionHandler\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ScriptFUSIONTest\\Retry\\ExceptionHandler\\": "test"
    }
  },
  "scripts": {
    "test": "phpunit -c test"
  },
  "config": {
    "sort-packages": true
  }
}
